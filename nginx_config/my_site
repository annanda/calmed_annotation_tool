server {
    listen       443 ssl;
    listen  [::]:443 ssl;
    server_name  localhost;
    ssl_certificate /etc/ssl/certs/star_insight-centre_org.pem;
    ssl_certificate_key /etc/ssl/private/insight-centre-org.key;

    location / {
        proxy_pass   http://annotation-tool:5000;
        auth_basic "Restricted Content";
        auth_basic_user_file /etc/apache2/.htpasswd;
    }

}
